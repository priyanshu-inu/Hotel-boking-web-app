<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <h2 style="text-align: center">Edit Your Listing</h2>
    <form
      method="post"
      class="form-control p-4 mt-3 mb-3"
      action="/listings/<%=newListing.id%>?_method=PUT"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title :</label>
        <input
          name="listing[title]"
          value="<%=newListing.title%>"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">URL/Link : </label>
        <input
          name="listing[image]"
          value="<%=newListing.image%>"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row margin-0">
        <div class="mb-3 col-4 padding-0 margin-0">
          <label for="price" class="form-label">Price :</label>
          <input
            name="listing[price]"
            value="<%=newListing.price%>"
            type="number"
            class="form-control"
          />
        </div>

        <div class="mb-3 col-8 margin2-0">
          <label for="country" class="form-label">Country :</label>
          <input
            name="listing[country]"
            value="<%=newListing.country%>"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location :</label>
        <input
          name="listing[location]"
          value="<%=newListing.location%>"
          type="text"
          class="form-control"
        />
      </div>

      <br />
      <button class="btn btn-dark add-btn">Update</button>
    </form>
  </div>
</div>
