<% layout("/layouts/boilerplate")%>
<body>
  <!-- <h2>I'm Listing</h2> -->
  <!-- <form action="/listings/new" method="get"><button>Create New</button></form> -->

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let list of allListings ){%>
    <a href="/listings/<%=list.id%>">
      <div class="card col">
        <img
          src="<%=list.image%>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />

        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text">
            <b><%=list.title%> </b><br />
            &#8377; <%=list.price.toLocaleString("en-IN")%> / Night
          </p>
        </div>
      </div>
    </a>

    <%}%>
  </div>
</body>
