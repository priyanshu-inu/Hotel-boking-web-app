<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <h2 style="text-align: center">Create a New Listing</h2>
    <form action="/listings" method="post" class="form-control p-4 mt-3 mb-3">
      <div class="mb-3">
        <label for="title" class="form-label">Title :</label>
        <input
          name="listing[title]"
          placeholder="Add a catchy title"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">URL/Link : </label>
        <input
          name="listing[image]"
          placeholder="Image URL/LINK"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row margin-0">
        <div class="mb-3 col-4 padding-0 margin-0">
          <label for="price" class="form-label">Price :</label>
          <input
            name="listing[price]"
            placeholder="1500"
            type="number"
            class="form-control"
          />
        </div>

        <div class="mb-3 col-8 margin2-0">
          <label for="country" class="form-label">Country :</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location :</label
        ><input
          name="listing[location]"
          placeholder="Uttarakhand"
          type="text"
          class="form-control"
        />
      </div>
      <br />

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
