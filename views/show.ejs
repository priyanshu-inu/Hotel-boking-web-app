<% layout("/layouts/boilerplate")%>

<div class="row mt-2 mb-5">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>
  <div class="card col-6 offset-3 show-card mt-2 mb-4">
    <img
      src="<%=oneList.image%>"
      class="card-img-top show-img mb-4"
      alt="listing_image" 
    />
    <div class="card-body">
      <p class="card-text">
        <b><%=oneList.title%></b> <br />
        &#8377; <%=oneList.price.toLocaleString("en-IN")%> <br />
        <%=oneList.country%> <br />
        <%=oneList.location%> <br />
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href="/listings/<%=oneList.id%>/edit"
      class="btn btn-dark col-1 offset-3 add-btn"
      >Edit
    </a>

    <form action="/listings/<%=oneList.id%>?_method=Delete " method="post">
      <button class="btn btn-dark offset-2">Delete</button>
    </form>
  </div>
</div>
